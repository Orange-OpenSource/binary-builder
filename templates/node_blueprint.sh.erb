INSTALLATION_DIR=$1
BINARY_VERSION=v<%= binary_version %>
DEST_DIR=`pwd`/node-${BINARY_VERSION}
FILENAME=node-$BINARY_VERSION.tar.gz
TAR_URL=http://nodejs.org/dist/${BINARY_VERSION}/$FILENAME
NODE_DIR=$INSTALLATION_DIR/node-${BINARY_VERSION}-linux-x64

template_steps() {

  ./configure --shared-openssl --prefix=/
  make -j 3 install DESTDIR=$NODE_DIR PORTABLE=1
  cp LICENSE $NODE_DIR
}

main "$@"
